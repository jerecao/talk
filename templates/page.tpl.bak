        </tr>
    </table>
    
    <div align="center"><button>同品牌</button><button>看全部</button></div>
    <!-- end 顶部 -->

    <!-- begin 同品牌用户发表的状态 -->
    <div id="same_brand">
        {foreach from=$talk key=k item=value}
        <table class="talk">
            <tr>
                <td><img src="{$value["avatar"]}" class="avatar"></td>
                <td><span class="name">{$k}</span><br/><span>{$value["content"]}</span></td>
            </tr>
        </table>
        <hr style="height:1px;border:none;border-top:1px solid #dddddd;" />
        {/foreach}
    </div>
    <!-- end 同品牌用户发表的状态 -->

    <!-- begin 全部用户发表的状态 -->
    <div id="all_brand">
        {foreach from=$talk key=k item=value}
        <table class="talk">
            <tr>
                <td><img src="{$value["avatar"]}" class="avatar"></td>
                <td><span class="name">{$k}</span><br/><span>{$value["content"]}</span></td>
            </tr>
        </table>
        <hr style="height:1px;border:none;border-top:1px solid #dddddd;" />
        {/foreach}
    </div>
